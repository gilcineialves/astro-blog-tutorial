---
import PostBlog from '../components/PostBlog.astro';
import LayoutBase from '../layouts/LayoutBase.astro';
import '../styles/global.css';

const tituloPagina = 'Meu Blog de Aprendizado sobre Astro';
const todasPostagens = await Astro.glob('../pages/postagens/*.md');
---
<LayoutBase tituloPagina={tituloPagina}>
  <p>Aqui Ã© onde postarei sobre minha jornada aprendendo Astro.</p>
  <ul>
    {todasPostagens.map(post=> <PostBlog url={post.url} titulo={post.frontmatter.title}/>)}
  </ul>
</LayoutBase>
    